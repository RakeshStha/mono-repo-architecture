{
  "name": "mono-repo-architecture",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "turbo": "^1.12.0",
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev:local": "concurrently \"pnpm --filter project-a dev\" \"pnpm --filter project-b dev\"",
    "dev:proxy": "vite --config apps/proxy-dev/vite.config.js",
    "dev:all": "concurrently \"pnpm dev:local\" \"pnpm dev:proxy\"",
    "build:all": "turbo run build",
    "docker:build": "docker build -f nginx/Dockerfile.production -t monorepo-app .",
    "docker:start": "docker run --rm -d -p 3000:80 --name monorepo-app monorepo-app",
    "docker:stop": "docker stop monorepo-app || true"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1"
}
